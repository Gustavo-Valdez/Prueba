pipeline {
  agent any
  
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    
    stage('Build') {
      steps {
        sh 'npm install'
        sh 'npm run build'
      }
    }
    
    stage('Deploy') {
      steps {
        sh 'sudo rsync -rav --delete dist/ /var/www/html/'
      }
    }
  }
  
  post {
    success {
      sh 'echo "Deployment successful!"'
    }
    
    failure {
      sh 'echo "Deployment failed!"'
    }
  }
}

